{
    "definition" : {
        "name":"base_cpu_widget",
        "widget_version":"v0.1",
        "language_version":1
    },
    "import_source":[
        { "name":"cpu_stats", "path":"./cpu_stats.py" }
    ],
    "content":{
        "type":"box",
        "title":"CPU_STATS",
        "show_box":true,
        "content":{
            "type":"columns",
            "content":[
                { 
                    "type":"pile", 
                    "content":[
                        { 
                            "type":"progress", 
                            "title":"Overall: ", 
                            "max":100, 
                            "f_color":"darkGreen", 
                            "b_color":"lightGray",
                            "value":"@cpu_stats.cpu_usage_total()"
                        },
                        {
                            "type":"line",
                            "f_color":"darkGray"
                        },
                        {
                            "type":"repeat",
                            "value":"0|@i|@cpu_stats.cpu_count()|2|1,2",
                            "content":{
                                "type":"progress",
                                "title":"CPU#@i",
                                "max":100,
                                "f_color":"darkGreen",
                                "b_color":"lightGray",
                                "value":"@cpu_stats.cpu_usage_per_core()[@i]"
                            }
                        }
                    ]
                },
                {
                    "type":"chart",
                    "f_color":"lightGreen",
                    "b_color":"lightGray",
                    "value":"@cpu_stats.cpu_usage_total()"
                }
            ]
        }        
    }
}