{
    "definition" : {
        "name": "base_cpu_widget",
        "widget_version": "0.1",
        "language_version": 1
    },
    "import_source": [
        { "name": "cpu_stats", "path": "./../cpu_stats.py" }
    ],
    "content": {
        "widget_type": "box",
        "properties": "title=\"CPU_STATS\";show_box=true",
        "content":{
            "widget_type": "columns",
            "content":[
                { 
                    "widget_type": "pile",
                    "content":[
                        { 
                            "widget_type": "progress",
                            "value": "@cpu_stats.cpu_usage_total()",
                            "properties": "f_color=\"dark green\";b_color=\"light gray\";max=100;title=\"Overall\""
                        },
                        {
                            "widget_type": "line",
                            "properties": "f_color=\"dark gray\""
                        },
                        {
                            "widget_type": "repeatColumn",
                            "value": "0;@cpu_stats.cpu_count();@i;2;1,2",
                            "content": {
                                "widget_type": "progress",
                                "value": "@cpu_stats.cpu_usage_per_core();@i",
                                "properties": "title=\"CPU#@i\";max=100;f_color=\"dark green\";b_color=\"light green\""
                            }
                        }
                    ]
                },
                {
                    "widget_type": "chart",
                    "value": "@cpu_stats.cpu_usage_total()",
                    "properties": "f_color=\"light green\";b_color=\"light gray\""
                }
            ]
        }        
    }
}
